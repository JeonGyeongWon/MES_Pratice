	function fn_validation() {
	  var result = true;
	  var orgid = $('#searchOrgId option:selected').val();
	  var companyid = $('#searchCompanyId option:selected').val();
	  var searchMonth = $("#searchMonth").val();
	  var header = [],
	  count = 0;

	  if (isNaN(orgid)) {
	    header.push("사업장");
	    count++;
	  }

	  if (isNaN(companyid)) {
	    header.push("공장");
	    count++;
	  }

	  if (searchMonth == "") {
	    header.push("기준년월");
	    count++;
	  }

	  if (count > 0) {
	    extAlert("[필수항목 미입력]<br/>" + header + " 항목을 입력해주세요.");
	    result = false;
	  }

	  return result;
	}

	function fn_search() {
	  if (!fn_validation()) {
	    return;
	  }

	  var orgid = $('#searchOrgId option:selected').val();
	  var companyid = $('#searchCompanyId option:selected').val();
	  var searchMonth = $("#searchMonth").val();
	  var searchRoutingGroup = $('#searchRoutingGroup option:selected').val();

	  var sparams = {
	    ORGID: orgid,
	    COMPANYID: companyid,
	    SEARCHMONTH: searchMonth,
	    SEARCHROUTINGGROUP: searchRoutingGroup,
	  };

	  extGridSearch(sparams, gridnms["store.1"]);
	}

	function fn_excel_download() {
	  if (!fn_validation()) {
	    return;
	  }

	  var orgid = $('#searchOrgId option:selected').val();
	  var companyid = $('#searchCompanyId option:selected').val();
	  var searchMonth = $("#searchMonth").val();
	  var searchRoutingGroup = $('#searchRoutingGroup option:selected').val();

	  go_url("<c:url value='/prod/manage/ExcelDownload.do?GUBUN='/>" + "MONTHLYDISCHARGE"
	     + "&ORGID=" + orgid + ""
	     + "&COMPANYID=" + companyid + ""
	     + "&SEARCHMONTH=" + searchMonth + ""
	     + "&SEARCHROUTINGGROUP=" + searchRoutingGroup + "");
	}

